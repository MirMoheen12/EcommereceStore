@model EcommereceStore.Models.Alluser

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Alluser</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-md-2">User Name</label>

            <div class="col-md-10">
                <input name="Username" type="text" required class="form-control" />
             
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">User Email</label>
         
            <div class="col-md-10">
                <input name="useremail" type="email" required class="form-control" />
      
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">User Password</label>
       
            <div class="col-md-10">
                <input name="UserPass" type="password" required class="form-control" />

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
